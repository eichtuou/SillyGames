{
    "compileOnSave": true,
    "compilerOptions": {
        "checkJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "tmp",
        "removeComments": false,
        "sourceMap": true,
        "target": "ES5"
    },
    "exclude": [
        "node_modules",
        "bin",
        "obj",
        "tmp"
    ],
    "include": [
        "./**/*"
    ]
}
